@{
    ViewData["Title"] = "Employee Master Data";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Master Data</title>
</head>

<div class="container-fluid">

    <!-- Large modal -->
    <button type="button" class="btn btn-primary mt-2 mb-5" data-toggle="modal" data-target=".register-modal" onclick="University()">Register</button>

    <div class="modal fade bd-example-modal-lg register-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Register Employee</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form class="container mt-3 register needs-validation" novalidate>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-address-book" aria-hidden="true"></i>
                            <label for="firstName">First name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="First name" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-address-book" aria-hidden="true"></i>
                            <label for="lastName">Last name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="Last name" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-mobile" aria-hidden="true"></i>
                            <label for="phone">Phone Number</label>
                            <input type="text" class="form-control" id="phone" placeholder="Phone Number" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3 mb-3">
                            <!-- Date input -->
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            <label class="control-label" for="date">Date</label>
                            <input class="form-control" id="date" placeholder="Birth Date" name="date" type="text" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <i class="fa fa-usd" aria-hidden="true"></i>
                            <label for="salary">Salary</label>
                            <input type="text" class="form-control" id="salary" placeholder="Salary" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" placeholder="Email" required>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="gender">Gender</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="male" value="0" checked>
                                <i class="fa fa-mars" aria-hidden="true"></i>
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="female" value="1">
                                <i class="fa fa-venus" aria-hidden="true"></i>
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-key" aria-hidden="true"></i>
                            <label for="password">Password</label>
                            <input type="text" class="form-control" id="password" placeholder="Password" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <i class="fa fa-book" aria-hidden="true"></i>
                            <label for="degree">Degree</label>
                            <select class="form-control" id="degree">
                                <option value="Diploma">Diploma</option>
                                <option value="Bachelor">Bachelor</option>
                                <option value="Master">Master</option>
                                <option value="Professor">Professor</option>
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <i class="fa fa-line-chart" aria-hidden="true"></i>
                            <label for="gpa">GPA</label>
                            <input type="text" class="form-control" id="gpa" placeholder="GPA" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <i class="fa fa-university" aria-hidden="true"></i>
                            <label for="university">University</label>
                            <select class="form-control" id="university">
                            </select>
                        </div>
                    </div>
                    <button class="btn btn-primary mb-3" type="submit" onclick="Register()">Register</button>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade bd-example-modal-lg update-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Data</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form class="container mt-3 needs-validation" novalidate>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-address-book" aria-hidden="true"></i>
                            <label for="firstName">First name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="First name" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-address-book" aria-hidden="true"></i>
                            <label for="lastName">Last name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="Last name" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-mobile" aria-hidden="true"></i>
                            <label for="phone">Phone Number</label>
                            <input type="text" class="form-control" id="phone" placeholder="Phone Number" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-3 mb-3">
                            <!-- Date input -->
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            <label class="control-label" for="date">Date</label>
                            <input class="form-control" id="date" placeholder="Birth Date" name="date" type="text" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <i class="fa fa-usd" aria-hidden="true"></i>
                            <label for="salary">Salary</label>
                            <input type="number" class="form-control" id="salary" placeholder="Salary" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <label for="email">Email</label>
                            <input type="text" class="form-control" id="email" placeholder="Email" required>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label for="gender">Gender</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="Male" value=0 checked>
                                <i class="fa fa-mars" aria-hidden="true"></i>
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="Female" value=1>
                                <i class="fa fa-venus" aria-hidden="true"></i>
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <i class="fa fa-key" aria-hidden="true"></i>
                            <label for="password">Password</label>
                            <input type="text" class="form-control" id="password" placeholder="Password" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <i class="fa fa-book" aria-hidden="true"></i>
                            <label for="degree">Degree</label>
                            <select class="form-control" id="degree">
                                <option value="Diploma">Diploma</option>
                                <option value="Bachelor">Bachelor</option>
                                <option value="Master">Master</option>
                                <option value="Professor">Professor</option>
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <i class="fa fa-line-chart" aria-hidden="true"></i>
                            <label for="gpa">GPA</label>
                            <input type="text" class="form-control" id="gpa" placeholder="GPA" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <i class="fa fa-university" aria-hidden="true"></i>
                            <label for="university">University</label>
                            <select class="form-control" id="university">
                            </select>
                        </div>
                    </div>
                    <button class="btn btn-primary mb-3" type="submit" id="update">Update</button>
                </form>
            </div>
        </div>
    </div>

    <table id="master-data" class="table table-hover mt-5 master-data">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No.</th>
                <th scope="col">NIK</th>
                <th scope="col">Name</th>
                <th scope="col">Gender</th>
                <th scope="col">Phone</th>
                <th scope="col">Birthdate</th>
                <th scope="col">Email</th>
                <th scope="col">Salary</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
    </table>

    <div class="row mt-5">
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fa fa-pie-chart" aria-hidden="true"></i>
                        Gender Chart
                    </h6>
                </div>
                <div class="card-body">
                    <div id="gender-chart" class="chart-area">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fa fa-university" aria-hidden="true"></i>
                        University Chart
                    </h6>
                </div>
                <div class="card-body">
                    <div id="univ-chart" class="chart-area">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</html>
